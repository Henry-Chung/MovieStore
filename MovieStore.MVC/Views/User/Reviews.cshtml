
@{
    ViewData["Title"] = "Reviews";
}

@model IEnumerable<MovieStore.Core.Entities.Review>

    <div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6 cl-lg-3 col-sm-4 col-xl-2">
                    <h5>Movie</h5>
                </div>
                <div class="col">
                    <h5>Rating</h5>
                </div>
                <div class="col">
                    <h5>Comment</h5>
                </div>
            </div>

            @foreach (var review in Model)
            {
                <div class="row">
                    <div class="col-6 cl-lg-3 col-sm-4 col-xl-2">
                        <img src="@review.Movie.PosterUrl" class="img-fluid" alt="@review.Movie.Title" />
                        <text>@review.Movie.Title</text>
                    </div>
                    <div class="col">
                        <text>@review.Rating</text>
                    </div>
                    <div class="col">
                        <text>@review.ReviewText</text>
                    </div>
                </div>
            }
        </div>
    </div>

